<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorActivity">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/activity_main_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onColorChoose"
            android:text="@string/activity_main_color_black_name" />

        <RadioButton
            android:id="@+id/activity_main_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onColorChoose"
            android:text="@string/activity_main_color_gray_name" />

        <RadioButton
            android:id="@+id/activity_main_color_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onColorChoose"
            android:text="@string/activity_main_color_blue_name" />

        <RadioButton
            android:id="@+id/activity_main_color_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onColorChoose"
            android:text="@string/activity_main_color_red_name" />

        <RadioButton
            android:id="@+id/activity_main_color_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onColorChoose"
            android:text="@string/activity_main_color_green_name" />

        <RadioButton
            android:id="@+id/activity_main_color_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onColorChoose"
            android:text="@string/activity_main_color_random_name" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>